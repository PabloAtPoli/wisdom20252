worker_processes 1;
events { worker_connections 1024; }

http {
  # send logs to Heroku's log stream (helps debugging)
  access_log /dev/stdout;
  error_log  /dev/stderr notice;

  server {
    listen <%= ENV["PORT"] %>;
    server_name _;

    # because your site lives in the repo root
    root /app;
    index index.html;

    # choose ONE of these:
    # Multi-page clean URLs:
    # location / { try_files $uri $uri/ $uri.html =404; }

    # SPA routing:
    location / { try_files $uri /index.html; }

    # (optional) long cache for assets
    location ~* \.(css|js|png|jpg|jpeg|gif|svg|ico|woff2?)$ {
      expires 1y;
      add_header Cache-Control "public, max-age=31536000, immutable";
    }
  }
}
